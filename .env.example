# ============================================
# CONFIGURACIÓN DE SEGURIDAD - VouTop
# ============================================

# JWT Secret (32+ caracteres aleatorios)
# Genera uno nuevo con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-this-secret-in-production-use-random-32-chars-minimum

# App Secret para App Signature (64+ caracteres aleatorios)
# Genera uno nuevo con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
APP_SECRET=change-this-app-secret-in-production-random-64-chars-minimum

# ============================================
# FRONTEND (Vite)
# ============================================

# App ID (identificador de la aplicación)
VITE_APP_ID=votetok-web-v1

# App Secret (mismo valor que APP_SECRET del backend)
VITE_APP_SECRET=change-this-app-secret-in-production-random-64-chars-minimum

# ============================================
# BASE DE DATOS
# ============================================

# Desarrollo local (SQLite) - descomentar para desarrollo:
# DATABASE_URL="file:./prisma/dev.db"

# Producción (PostgreSQL) - Railway auto-genera esta variable:
DATABASE_URL="postgresql://user:password@host:5432/database"

# Puerto del servidor (Railway lo asigna automáticamente)
PORT=3000

# Node environment
NODE_ENV=development

# ============================================
# OPCIONAL: Servicios Externos
# ============================================

# Giphy API (búsqueda de GIFs)
# Obtén tu key en: https://developers.giphy.com/
VITE_GIPHY_API_KEY=your-giphy-api-key

# Tenor API (búsqueda de GIFs adicionales)
# Obtén tu key en: https://developers.google.com/tenor/guides/quickstart
VITE_TENOR_API_KEY=your-tenor-api-key

# Cloudflare Turnstile (anti-bots)
# VITE_TURNSTILE_SITE_KEY=your-site-key
# TURNSTILE_SECRET_KEY=your-secret-key

# Firebase App Check (seguridad avanzada)
# VITE_FIREBASE_API_KEY=your-api-key
# VITE_FIREBASE_PROJECT_ID=your-project-id
# VITE_FIREBASE_APP_ID=your-app-id
# VITE_RECAPTCHA_SITE_KEY=your-recaptcha-key
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}

# ============================================
# GOOGLE OAUTH (Autenticación)
# ============================================

# Google OAuth Client ID
# Obtén en: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google OAuth Redirect URI
# Desarrollo: http://localhost:5173/api/auth/google/callback
# Producción: https://voutop.com/api/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:5173/api/auth/google/callback

# ============================================
# VERIFICACIÓN DE DOMINIOS (Link Preview)
# ============================================

# Google Safe Browsing API (detecta phishing, malware)
# Obtén tu key en: https://console.cloud.google.com/apis/library/safebrowsing.googleapis.com
# Gratis: 10,000 consultas/día
GOOGLE_SAFE_BROWSING_API_KEY=your-safe-browsing-api-key

# VirusTotal API (verificación de reputación adicional)
# Obtén tu key en: https://www.virustotal.com/gui/my-apikey
# Gratis: 4 consultas/minuto, 500/día
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# NOTA: La lista Tranco (Top 1M sitios) se descarga automáticamente
# No requiere API key - https://tranco-list.eu/
