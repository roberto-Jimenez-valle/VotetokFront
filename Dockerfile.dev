# DOCKERFILE DE DESARROLLO - MÁS RÁPIDO
# ===============================================

FROM node:20-alpine

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    cairo-dev \
    pango-dev \
    jpeg-dev \
    giflib-dev \
    librsvg-dev

# Install pnpm
RUN npm install -g pnpm@8

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml* ./

# Install dependencies (sin frozen lockfile)
RUN pnpm install

# Copy source code
COPY . .

# Generate Prisma Client
RUN npx prisma generate

# Expose port
EXPOSE 3000

# Development command with hot reload
CMD ["pnpm", "dev", "--host", "0.0.0.0"]
