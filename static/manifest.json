    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Vista principal del globo 3D"
    },
    {
      "src": "/screenshots/desktop-2.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Panel de votación activa"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Vista móvil del globo"
    },
    {
      "src": "/screenshots/mobile-2.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Vista de encuestas móvil"
    }
  ],
  "shortcuts": [
    {
      "name": "Crear Encuesta",
      "short_name": "Nueva",
      "description": "Crear una nueva encuesta",
      "url": "/create-poll?utm_source=pwa-shortcut",
      "icons": [
        {
          "src": "/icons/shortcut-create.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Trending",
      "short_name": "Trending",
      "description": "Ver encuestas trending",
      "url": "/trending?utm_source=pwa-shortcut",
      "icons": [
        {
          "src": "/icons/shortcut-trending.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mi Perfil",
      "short_name": "Perfil",
      "description": "Ver mi perfil",
      "url": "/profile?utm_source=pwa-shortcut",
      "icons": [
        {
          "src": "/icons/shortcut-profile.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+voutop",
      "url": "/poll/%s"
    }
  ],
  "related_applications": [],
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      },
      "icons": [
        {
          "src": "/icons/file-handler.png",
          "sizes": "256x256"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "widgets": [
    {
      "name": "Encuesta del Día",
      "tag": "poll-of-day",
      "description": "Encuesta destacada del día",
      "ms_ac_template": "/widgets/poll-template.json",
      "data": "/api/widgets/poll-of-day",
      "type": "application/json",
      "update": 3600,
      "icons": [
        {
          "src": "/icons/widget-poll.png",
          "sizes": "256x256"
        }
      ],
      "backgrounds": [
        {
          "src": "/widgets/background.png",
          "sizes": "600x400"
        }
      ]
    }
  ]
}
